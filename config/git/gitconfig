# Git 配置 - 由 dotfiles 管理
# User 信息在 ~/.gitconfig 中设置

[core]
    editor = vim
    autocrlf = input

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = log --graph --all --oneline --decorate
    amend = commit --amend --no-edit
    undo = reset --soft HEAD~1

[push]
    default = simple
    followTags = true

[pull]
    rebase = false

[init]
    defaultBranch = main

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff
